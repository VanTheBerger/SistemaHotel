@model WebSistemaHotel.Models.LoginModel

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/css/cadastro.css" rel="stylesheet" />

</head>
<body>
    <div class="signup-form">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="danger"></div>
            <h2>Login</h2>
            <br />
            <div class="form-group">
                <input type="email" class="form-control" asp-for="Email" placeholder="Email">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" asp-for="Senha" placeholder="Senha">
            </div>

            <h1></h1>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg btn-block">Entrar</button>
            </div>
        </form>
        <div class="text-center">Ainda não possui uma conta? <a href="#">Crie aqui!</a></div>
    </div>
</body>

</html>  